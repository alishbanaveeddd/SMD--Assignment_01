<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B3A3A"
    tools:context=".SignUpActivity">

    <!-- Back Arrow -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_revert"
        app:tint="#FFFFFF"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Back" />

    <!-- Title "Socially" -->
    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Socially"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create An Account and Sign Up"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@android:drawable/ic_menu_camera"
        app:tint="#808080"
        android:scaleType="centerInside"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toBottomOf="@id/subtitle_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:contentDescription="Profile Icon" />

    <!-- Username -->
    <TextView
        android:id="@+id/username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/profile_icon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/username_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter username"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:background="@android:color/transparent"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/username_label"
        app:layout_constraintStart_toStartOf="@id/username_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/username_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/username_field"
        app:layout_constraintStart_toStartOf="@id/username_field"
        app:layout_constraintEnd_toEndOf="@id/username_field"
        android:layout_marginTop="4dp" />

    <!-- First Name -->
    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Name"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/username_underline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/name_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter first name"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:background="@android:color/transparent"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintStart_toStartOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/name_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/name_field"
        app:layout_constraintStart_toStartOf="@id/name_field"
        app:layout_constraintEnd_toEndOf="@id/name_field"
        android:layout_marginTop="4dp" />

    <!-- Last Name -->
    <TextView
        android:id="@+id/last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Last Name"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/name_underline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/last_name_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter last name"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:background="@android:color/transparent"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/last_name_label"
        app:layout_constraintStart_toStartOf="@id/last_name_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/last_name_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/last_name_field"
        app:layout_constraintStart_toStartOf="@id/last_name_field"
        app:layout_constraintEnd_toEndOf="@id/last_name_field"
        android:layout_marginTop="4dp" />

    <!-- Date of Birth -->
    <TextView
        android:id="@+id/dob_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/last_name_underline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/dob_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="DD - MM - YYYY"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:background="@android:color/transparent"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@id/dob_label"
        app:layout_constraintStart_toStartOf="@id/dob_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/dob_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/dob_field"
        app:layout_constraintStart_toStartOf="@id/dob_field"
        app:layout_constraintEnd_toEndOf="@id/dob_field"
        android:layout_marginTop="4dp" />

    <!-- Email -->
    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/dob_underline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter email"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:background="@android:color/transparent"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/email_label"
        app:layout_constraintStart_toStartOf="@id/email_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp" />

    <View
        android:id="@+id/email_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/email_field"
        app:layout_constraintStart_toStartOf="@id/email_field"
        app:layout_constraintEnd_toEndOf="@id/email_field"
        android:layout_marginTop="4dp" />

    <!-- Password -->
    <TextView
        android:id="@+id/password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/email_underline"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter password"
        android:textColor="#FFFFFF"
        android:textColorHint="#CCCCCC"
        android:background="@android:color/transparent"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/password_label"
        app:layout_constraintStart_toStartOf="@id/password_label"
        app:layout_constraintEnd_toEndOf="@id/password_eye"
        android:layout_marginTop="4dp" />

    <ImageView
        android:id="@+id/password_eye"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_view"
        app:tint="#CCCCCC"
        android:contentDescription="Show Password"
        app:layout_constraintBottom_toBottomOf="@id/password_field"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp" />

    <View
        android:id="@+id/password_underline"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/password_field"
        app:layout_constraintStart_toStartOf="@id/password_field"
        app:layout_constraintEnd_toEndOf="@id/password_field"
        android:layout_marginTop="4dp" />

    <!-- Create Account Button -->
    <Button
        android:id="@+id/create_account_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_rounded"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
