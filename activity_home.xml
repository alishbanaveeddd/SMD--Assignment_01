<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".HomeActivity">

    <!-- Status bar space -->
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.08" />

    <!-- Socially Logo Text -->
    <TextView
        android:id="@+id/tv_socially_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="serif"
        android:letterSpacing="0.02"
        android:text="Socially"
        android:textColor="#8B4513"
        android:textSize="48sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/status_bar_space" />




    <androidx.cardview.widget.CardView
        android:id="@+id/cv_profile_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="262dp">

        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="Profile picture"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_placeholder" />

    </androidx.cardview.widget.CardView>

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, jacob_w!"
        android:textSize="18sp"
        android:textColor="#333333"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/cv_profile_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- View Posts Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_view_posts_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#8B4513"
        app:layout_constraintTop_toBottomOf="@id/tv_welcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/tv_view_posts_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="View Posts"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="normal"
            android:gravity="center"
            android:fontFamily="sans-serif" />

    </androidx.cardview.widget.CardView>

    <!-- Settings Text -->
    <TextView
        android:id="@+id/tv_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="14sp"
        android:textColor="#8B4513"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/cv_view_posts_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp" />

    <!-- Bottom indicator line -->
    <View
        android:id="@+id/bottom_indicator"
        android:layout_width="60dp"
        android:layout_height="4dp"
        android:background="#8B4513"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>