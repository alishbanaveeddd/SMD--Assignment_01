<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground">

    <!-- Story Circle with Gradient Border -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="4dp">

        <!-- Gradient Border -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/story_gradient_border" />

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/iv_story_profile"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_placeholder"
            android:contentDescription="Story Profile"
            android:scaleType="centerCrop" />

        <!-- Add Story Icon (for "Your Story") -->
        <ImageView
            android:id="@+id/iv_add_story"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_add"
            android:background="@drawable/story_add_background"
            android:padding="4dp"
            android:visibility="gone"
            android:contentDescription="Add Story" />

    </FrameLayout>

    <!-- Username -->
    <TextView
        android:id="@+id/tv_story_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:maxWidth="64dp" />

</LinearLayout>


