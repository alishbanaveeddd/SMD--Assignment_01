<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ChatActivity">

    <!-- Status Bar Space -->
    <View
        android:id="@+id/status_bar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.06" />

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/status_bar_space">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

        <!-- Profile Picture -->
        <ImageView
            android:id="@+id/iv_profile_picture"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/profile_placeholder"
            android:contentDescription="Profile picture"
            android:scaleType="centerCrop"
            android:layout_marginStart="12dp" />

        <!-- Username -->
        <TextView
            android:id="@+id/tv_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="internshala"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp" />

        <!-- Video Call Button -->
        <ImageView
            android:id="@+id/iv_video_call"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_video_call"
            android:contentDescription="Video call"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:layout_marginEnd="8dp" />

        <!-- Info Button -->
        <ImageView
            android:id="@+id/iv_info"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_info"
            android:contentDescription="Info"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Chat Messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat_messages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/ll_header"
        app:layout_constraintBottom_toTopOf="@id/ll_message_input"
        tools:listitem="@layout/item_chat_message" />

    <!-- Message Input Bar -->
    <LinearLayout
        android:id="@+id/ll_message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Camera Button -->
        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_camera"
            android:contentDescription="Camera"
            android:background="@drawable/camera_button_background"
            android:padding="8dp"
            android:layout_marginEnd="12dp" />

        <!-- Message Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Message..."
            app:boxStrokeColor="@color/light_gray"
            app:hintTextColor="@color/gray">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:inputType="textMultiLine"
                android:maxLines="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Action Icons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp">

            <!-- Microphone -->
            <ImageView
                android:id="@+id/iv_microphone"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_microphone"
                android:contentDescription="Microphone"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <!-- Gallery -->
            <ImageView
                android:id="@+id/iv_gallery"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_gallery"
                android:contentDescription="Gallery"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp"
                android:layout_marginEnd="8dp" />

            <!-- Emoji -->
            <ImageView
                android:id="@+id/iv_emoji"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_emoji"
                android:contentDescription="Emoji"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackground"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bottom indicator line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/brown"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>


